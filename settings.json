{
    "[xml]": {
        "editor.rulers": [
            80
        ],
        "editor.tabSize": 2,
        "rewrap.autoWrap.enabled": true,
    },
    // common XML settings
    "xml.catalogs": [
        "/etc/xml/catalog"
    ],
    "xml.symbols.enabled": false,
    "xml.validation.resolveExternalEntities": true,
    "xml.validation.xInclude.enabled": false,
    "xml.codeLens.enabled": false,
    // associate RNG schemas to XML document according to suffix
    "xml.fileAssociations": [
        {
            "pattern": "**/*.asm.xml",
            "systemId": "file:///usr/share/xml/docbook/schema/rng/5.2/assemblyxi.rng"
        },
        {
            "pattern": "**/*.xml",
            "systemId": "file:///usr/share/xml/geekodoc/rng/geekodoc-latest-flat.rng"
        }
    ],
    // spellcheck settings
    "cSpell.enabled": true,
    "cSpell.enabledFileTypes": {
        "asciidoc": true,
        "markdown": true,
        "xml": true,
    },
    "cSpell.caseSensitive": true,
    "cSpell.minWordLength": 3,
    "cSpell.customDictionaries": {
        "SUSE custom": {
            "name": "SUSE custom dictionary",
            "path": "/usr/share/hunspell/en_US-suse-doc.dic",
            "addWords": false,
        },
        "SUSE adWords": {
            "name": "SUSE adWords dictionary",
            "path": "~/SUSE-adWords-dict.dic",
            "addWords": true,
        }
    },
    "cSpell.showAutocompleteSuggestions": true,
    "cSpell.ignoreRegExpList": [
        "/<(\n|.)*?>/g",
        "/<\/.*?>/g",
        "/&.*;/g",
        "/<(systemitem|screen|command|package|option|filename|systemitem|literal|guimenu|envar|remark).*?>(\n|.)*?</(\\1)>/g",
        "/:[a-zA-Z_-]+:/",
        "/----\n[\\S\\s]+?\n----/",
        "/```\n[\\S\\s]+?\n```/"
    ],
    "daps.openFileSplit": true,
    "daps.autoSave": true,
    "daps.verbosityLevel": 2,
    "daps.XMLformatConfigFile": "~/.config/daps/docbook-xmlformat.conf",
    "daps.runTerminal": true,
    "daps.enableDbg": "both",
    "daps.showXrefCodelens": "both",
}
