{
    "[xml]": {
        "editor.rulers": [
            80
        ],
        "editor.tabSize": 1,
        "rewrap.autoWrap.enabled": true,
    },
    "xml.foldings.includeClosingTagInFold": true,
    "xml.fileAssociations": [
        {
            "pattern": "**/*.xml",
            "systemId": "file:///usr/share/xml/geekodoc/rng/geekodoc-latest-flat.rng"
        }
    ],
    "xml.format.enabled": false,
    "xml.validation.resolveExternalEntities": true,
    "xml.validation.xInclude.enabled": true,
    "xml.references": [
        {
            "pattern": "**/*.xml",
            "expressions": [
                {
                    "from": "xref/@linkend",
                    "to": "@xml:id"
                },
            ]
        }
    ],
    "xml.codeLens.enabled": true,
    "cSpell.enabledLanguageIds": [
        "xml"
    ],
    "cSpell.caseSensitive": true,
    "cSpell.minWordLength": 3,
    "cSpell.flagWords": [
        "filesystem"
    ],
    "cSpell.customDictionaries": {
        "SUSE custom": {
            "name": "SUSE custom dictionary",
            "path": "/usr/share/hunspell/en_US-suse-doc.dic",
            "addWords": false,
        },
        "SUSE adWords": {
            "name": "SUSE adWords dictionary",
            "path": "~/SUSE-adWords-dict.dic",
            "addWords": true,
        }
    },
    "cSpell.showAutocompleteSuggestions": true,
    "cSpell.ignoreRegExpList": [
        "/<(\n|.)*?>/g",
        "/<\/.*?>/g",
        "/&.*;/g",
        "/<(screen|command|package|option|filename|systemitem).*?>(\n|.)*?</(\\1)>/g",
    ],
}